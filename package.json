{
  "name": "@mweb/monorepo",
  "version": "0.1.0",
  "description": "Mutable Web monorepository",
  "main": "index.js",
  "repository": "https://github.com/dapplets/mutable-web-monorepo",
  "author": "Dapplets Team <contact@dapplets.org>",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "build:extension": "turbo run build --filter=@mweb/extension",
    "build:gateway": "turbo run build --filter=@mweb/gateway",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "autoclave": "rimraf libs/**/dist && rimraf libs/**/lib && rimraf libs/**/node_modules && rimraf libs/**/coverage && rimraf libs/**/.turbo && rimraf apps/**/dist && rimraf apps/**/lib && rimraf apps/**/node_modules && rimraf apps/**/coverage && rimraf apps/**/build && rimraf apps/**/.turbo && rm -rf node_modules",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "turbo": "^2.0.6",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "eslint": "8.20.0",
    "rimraf": "3.0.2"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "develop",
        "prerelease": "alpha"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "pnpm-lock.yaml"
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "pnpm run build:extension:testnet && cd build && zip -r mweb-extension-testnet.zip *"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/dapplet-extension.zip",
              "label": "Browser Extension (zip)"
            },
            {
              "path": "lib/index.min.js",
              "label": "Pure JSLib for browser (js)"
            }
          ]
        }
      ]
    ]
  }
}
