{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "test/**/*.js"],
      "outputs": ["dist/**", "lib/**"],
      "cache": false,
      "env": ["NEAR_NETWORK"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
